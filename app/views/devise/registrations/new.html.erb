<section class="pt-2 pb-2">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="card mx-auto col-8 px-0 shadow">
      <div class="card-head px-5 pt-5">
        <h3 class="card-title text-center">Registrar-se</h3>
      </div>

      <div class="card-body px-5 py-3">
        <div class="form-inputs">
          <%= f.input :nome, required: true, autofocus: true, input_html: { class: "b-primary" } %>
          <%= f.input :login, required: true, input_html: { class: "b-primary" } %>
          <%= f.input :email, required: true, input_html: { class: "b-primary" } %>
          <%= f.input :data_nascimento, required: true, input_html: { class: "b-primary" } %>
          <%= f.input :cpf, required: true, input_html: { class: "b-primary" } %>
          <%= f.input :password, required: true, input_html: { class: "b-primary" } %>
          <%= f.input :password_confirmation, required: true, input_html: { class: "b-primary" } %>
        </div>
      </div>

      <div class="card-footer row no-gutters">
        <%= link_to "Voltar", new_session_path(resource_name), class: "line-height" %>
        <%= f.button :submit, "Entrar", class: "ml-auto btn-success" %>
      </div>
    </div>
  <% end %>
</section>
